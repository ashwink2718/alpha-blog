<h1 align="center">Sign Up for Alpha Blog </h1>

<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col col-md-8">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
            <%= f.label :username %>
        </div>
        <div class="col col-md-10">
            <%= f.text_field :username , class: "form-control", placeholder: "Enter Username", autofocus: true %>
        </div>  
      </div>    

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :email %>
        </div>
        <div class="col col-md-10"> 
          <%= f.email_field :email, class: "form-control", placeholder: "Enter Email Address", autofocus: true%>
        </div>     
      </div>   

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :password %>
        </div>
        <div class="col col-md-10"> 
          <%= f.password_field :password, class: "form-control", placeholder: "Enter Password", autofocus: true%>
        </div>     
      </div>   

      <div class="form-group">
        <div class="col-md-offset-2 col col-md-6">
          <%= f.submit "Sign Up", class: "btn btn-primary btn-lg" %>
        </div>          
      </div>    


    <% end %>

      <div class="col col-md-offset-5 col-md-7">
        <%= link_to "[Cancel & Go Back To Articles List]", articles_path %>       
      </div>

    </div>
  </div>