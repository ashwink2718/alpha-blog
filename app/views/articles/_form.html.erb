<%= render 'shared/errors', obj: @article %>

<div class="row">
	<div class="col col-md-8">
		<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			<div class="form-group">
				<div class="control-label col-md-2">
						<%= f.label :title %>
				</div>
				<div class="col col-md-10">
						<%= f.text_field :title , class: "form-control", placeholder: "Title of Article", autofocus: true %>
				</div>	
			</div>		

			<div class="form-group">
				<div class="control-label col-md-2">
					<%= f.label :description %>
				</div>
				<div class="col col-md-10">	
					<%= f.text_area :description, rows:10, class: "form-control", placeholder: "Body of article", autofocus: true%>
				</div>		 
			</div>			

			<div class="form-group">
				<div class="col-md-offset-2 col col-md-6">
					<%= f.submit class: "btn btn-primary btn-lg" %>
				</div>					
			</div>		


		<% end %>

			<div class="col col-md-offset-5 col-md-7">
				<%= link_to "[Cancel & Go Back To Articles List]", articles_path %>				
			</div>

		</div>
	</div>