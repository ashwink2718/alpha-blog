<h1>Here are all your articles </h1>

<p>
	<%= link_to "Create New Article", new_article_path %> 
</p>

<table>
	<tr>
		<th>Title</th>
		<th>Description</th>
	</tr>

<% @articles.each do |number| %>
	
	<tr>
		<td><%= number.title %></td>
		<td><%= number.description %></td>
		<td><%= link_to "Show", article_path(number) %></td>
		<td><%= link_to "Edit", edit_article_path(number) %></td>
		<td><%= link_to "Delete", article_path(number), method: :delete, data: {confirm: "Are you sure?"} %></td>
	</tr>

<% end %>

</table>